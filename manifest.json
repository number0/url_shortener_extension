{
    "manifest_version": 2,
    "name": "goo.gl URL Shortener extension",
    "description": "__MSG_extDescription__",
    "version": "1.33.3",
    "browser_action": {
        "default_icon": "./url_shortener_extension_19.png",
        "default_title": "URL Shortener",
        "default_popup": "./popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "contextMenus",
        "https://www.googleapis.com/"
    ],
    "optional_permissions": [
        "https://readitlaterlist.com/"
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://ssl.google-analytics.com https://platform.twitter.com; object-src 'self'",
    "web_accessible_resources": [
        "bridge.html",
        "url_shortener_extension_48.png"
    ],
    "icons": {
        "16": "./url_shortener_extension_16.png",
        "48": "./url_shortener_extension_48.png",
        "128": "./url_shortener_extension_128.png"
    },
    "background": {
        "page": "./background.html"
    },
    "options_page": "options.html",
    "default_locale": "en",
    "intents": {
        "http://webintents.org/shorten": [
        {
            "type": ["text/uri-list"],
            "href": "./webintent.html",
            "title": "goo.gl URL Shortener extension",
            "disposition": "inline"
        }
    ]},
    "sandbox": {
        "pages": ["ad.html"]
    }
}
