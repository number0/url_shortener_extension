{
    "name": "goo.gl URL Shortener extension",
    "description": "__MSG_extDescription__",
    "version": "1.29.0",
    "browser_action": {
        "default_icon": "./url_shortener_extension_19.png",
        "default_title": "URL Shortener",
        "popup": "./popup.html"
    },
    "permissions": [
        "tabs",
        "notifications",
        "contextMenus",
        "https://www.googleapis.com/"
    ],
    "optional_permissions": [
        "https://readitlaterlist.com/"
    ],
    "icons": {
        "16": "./url_shortener_extension_16.png",
        "48": "./url_shortener_extension_48.png",
        "128": "./url_shortener_extension_128.png"
    },
    "background_page": "./background.html",
    "options_page": "options.html",
    "default_locale": "en",
    "intents": {
        "http://webintents.org/shorten": [
        {
            "type": ["text/uri-list"],
            "href": "./webintent.html",
            "title": "goo.gl URL Shortener extension",
            "disposition": "inline"
        }
    ]}
}
